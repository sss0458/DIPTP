<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.TeachTaskMapper">
    
    <resultMap type="org.example.domain.TeachTask" id="TeachTaskResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="describe"    column="describe"    />
        <result property="startDate"    column="start_date"    />
        <result property="endDate"    column="end_date"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="teacherId"    column="teacher_id"    />
    </resultMap>

    <resultMap id="TeachTaskTeachTaskTestResult" type="org.example.domain.TeachTask" extends="TeachTaskResult">
        <collection property="teachTaskTestList" ofType="org.example.domain.TeachTaskTest" column="id" select="selectTeachTaskTestList" />
    </resultMap>

    <resultMap type="org.example.domain.TeachTaskTest" id="TeachTaskTestResult">
        <result property="id"    column="id"    />
        <result property="taskId"    column="task_id"    />
        <result property="title"    column="title"    />
        <result property="dataType"    column="data_type"    />
        <result property="describe"    column="describe"    />
        <result property="theory"    column="theory"    />
        <result property="algorithmId"    column="algorithm_id"    />
        <result property="caseId"    column="case_id"    />
        <result property="ruleId"    column="rule_id"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectTeachTaskVo">
        select id, title, `describe`, start_date, end_date, status, remark, del_flag, teacher_id from teach_task
    </sql>

    <select id="selectTeachTaskList" parameterType="org.example.domain.TeachTask" resultMap="TeachTaskResult">
        <include refid="selectTeachTaskVo"/>
        <where>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="describe != null  and describe != ''"> and `describe` = #{describe}</if>
            <if test="startDate != null "> and start_date = #{startDate}</if>
            <if test="endDate != null "> and end_date = #{endDate}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="teacherId != null "> and teacher_id = #{teacherId}</if>
            and del_flag = '0'
        </where>
    </select>
    
    <select id="selectTeachTaskById" parameterType="Long" resultMap="TeachTaskTeachTaskTestResult">
        select id, title, `describe`, start_date, end_date, status, remark, del_flag, teacher_id
        from teach_task
        where id = #{id} and del_flag = '0'
    </select>

    <select id="selectTeachTaskTestList" resultMap="TeachTaskTestResult">
        select id, task_id, title, data_type, `describe`, theory, algorithm_id, case_id, rule_id, status, remark, del_flag
        from teach_task_test
        where task_id = #{task_id} and del_flag = '0'
    </select>

    <select id="selectTeachTaskListByIds" resultMap="TeachTaskTeachTaskTestResult">
        <include refid="selectTeachTaskVo"/>
        where id in
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
        and del_flag = '0'
    </select>

    <insert id="insertTeachTask" parameterType="org.example.domain.TeachTask" useGeneratedKeys="true" keyProperty="id">
        insert into teach_task
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">title,</if>
            <if test="`describe` != null">`describe`,</if>
            <if test="startDate != null">start_date,</if>
            <if test="endDate != null">end_date,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="teacherId != null">teacher_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null">#{title},</if>
            <if test="describe != null">#{describe},</if>
            <if test="startDate != null">#{startDate},</if>
            <if test="endDate != null">#{endDate},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="teacherId != null">#{teacherId},</if>
         </trim>
    </insert>

    <update id="updateTeachTask" parameterType="org.example.domain.TeachTask">
        update teach_task
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null">title = #{title},</if>
            <if test="describe != null">`describe` = #{describe},</if>
            <if test="startDate != null">start_date = #{startDate},</if>
            <if test="endDate != null">end_date = #{endDate},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="teacherId != null">teacher_id = #{teacherId},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="deleteTeachTaskById" parameterType="Long">
        update teach_task
        set del_flag = '1'
        where id = #{id}
    </update>

    <update id="deleteTeachTaskByIds" parameterType="String">
        update teach_task
        set del_flag = '1'
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <!--    修改-->
    <update id="markExpiredTasksAsDeleted">
        UPDATE teach_task
        SET del_flag = '1'
        WHERE del_flag = '0'
          AND (end_date IS NULL OR end_date &lt; #{now})
    </update>

    <update id="deleteTeachTaskTestByTaskIds" parameterType="String">
        update teach_task_test
        set del_flag = '1'
        where task_id in
        <foreach item="taskId" collection="array" open="(" separator="," close=")">
            #{taskId}
        </foreach>
    </update>

    <update id="deleteTeachTaskTestByTaskId" parameterType="Long">
        update teach_task_test
        set del_flag = '1'
        where task_id = #{taskId}
    </update>
    <update id="activateTeachTaskTestByTaskId">
        update teach_task_test
        set del_flag = '0'
        where task_id = #{taskId}
    </update>

    <insert id="batchTeachTaskTest">
        insert into teach_task_test(task_id, title, data_type, `describe`, theory, algorithm_id, case_id, rule_id, status, remark, del_flag) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.taskId}, #{item.title}, #{item.dataType}, #{item.describe}, #{item.theory}, #{item.algorithmId}, #{item.caseId}, #{item.ruleId}, #{item.status}, #{item.remark}, '0')
        </foreach>
    </insert>
</mapper>
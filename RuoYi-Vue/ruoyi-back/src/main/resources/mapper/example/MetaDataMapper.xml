<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.MetaDataMapper">

    <resultMap type="org.example.domain.MetaData" id="MetaDataResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="contentLength" column="content_length"/>
        <result property="isRequired" column="is_required"/>
        <result property="delFlag" column="del_flag"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectMetaDataColumns">
        select id, name, content_length, is_required, del_flag, status, remark
        from meta_data
    </sql>

    <select id="selectMetaDataList" parameterType="org.example.domain.MetaData" resultMap="MetaDataResult">
        <include refid="selectMetaDataColumns"/>
        <where>
            <if test="name != null and name != ''">
                and `name` like concat('%', #{name}, '%')
            </if>
            <if test="contentLength != null">
                and content_length = #{contentLength}
            </if>
            <if test="isRequired != null and isRequired != ''">
                and is_required = #{isRequired}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="remark != null and remark != ''">
                and remark like concat('%', #{remark}, '%')
            </if>
            and del_flag = '0'
        </where>
        order by id desc
    </select>

    <select id="selectMetaDataById" parameterType="Long" resultMap="MetaDataResult">
        <include refid="selectMetaDataColumns"/> where id = #{id} and del_flag = '0'
    </select>

    <select id="selectMetaDataIdByName" parameterType="String" resultType="Long">
        SELECT id
        FROM meta_data WHERE name = #{name} AND del_flag = '0' AND status = '1' LIMIT 1
    </select>

    <select id="selectMetaDataByName" parameterType="String" resultMap="MetaDataResult">
        <include refid="selectMetaDataColumns"/> where `name` = #{name} AND del_flag = '0' AND status = '1'
        LIMIT 1
    </select>

    <insert id="insertMetaData" parameterType="org.example.domain.MetaData" useGeneratedKeys="true" keyProperty="id">
        insert into meta_data
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">`name`,</if>
            <if test="contentLength != null">content_length,</if>
            <if test="isRequired != null and isRequired != ''">is_required,</if>
            <if test="delFlag != null and delFlag != ''">del_flag,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="contentLength != null">#{contentLength},</if>
            <if test="isRequired != null and isRequired != ''">#{isRequired},</if>
            <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateMetaData" parameterType="org.example.domain.MetaData">
        update meta_data
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="contentLength != null">content_length = #{contentLength},</if>
            <if test="isRequired != null and isRequired != ''">is_required = #{isRequired},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="updateMetaDataDelFlagById">
        update meta_data set del_flag = '1'
        where id = #{id}
    </update>

    <update id="updateMetaDataDelFlagByIds">
        update meta_data set del_flag = '1'
        where id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

</mapper>
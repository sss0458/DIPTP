<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.StudentWorkScoreMapper">
    
    <resultMap type="org.example.domain.StudentWorkScore" id="StudentWorkScoreResult">
        <result property="id"    column="id"    />
        <result property="taskId"    column="task_id"    />
        <result property="taskTestId"    column="task_test_id"    />
        <result property="workId"    column="work_id"    />
        <result property="workContentId"    column="work_content_id"    />
        <result property="ruleId"    column="rule_id"    />
        <result property="dimensionId"    column="dimension_id"    />
        <result property="score"    column="score"    />
        <result property="comment"    column="comment"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="teacherId"    column="teacher_id"    />
    </resultMap>

    <resultMap type="org.example.domain.vo.StudentWorkScoreVo" id="StudentWorkScoreVoResult">
        <result property="id"    column="id"    />
        <result property="taskId"    column="task_id"    />
        <result property="taskTestId"    column="task_test_id"    />
        <result property="workId"    column="work_id"    />
        <result property="workContentId"    column="work_content_id"    />
        <result property="ruleId"    column="rule_id"    />
        <result property="dimensionId"    column="dimension_id"    />
        <result property="score"    column="score"    />
        <result property="comment"    column="comment"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="taskTitle"    column="taskTitle"    />
        <result property="testTitle"    column="testTitle"    />
        <result property="ruleName"    column="ruleName"    />
        <result property="dimension"    column="dimension"    />
        <result property="userName"    column="userName"    />
    </resultMap>

    <sql id="selectStudentWorkScoreVo">
        select id, task_id, task_test_id, work_id, work_content_id, rule_id, dimension_id, score, comment, status, remark, del_flag, teacher_id from student_work_score
    </sql>

    <sql id="selectStudentWorkScoreWithNew">
        select
            s.id,
            s.task_id,
            s.task_test_id,
            s.work_id,
            s.work_content_id,
            s.rule_id,
            s.dimension_id,
            s.score,
            s.comment,
            s.status,
            s.remark,
            s.del_flag,
            s.teacher_id,
            t.title as taskTitle,
            tt.title as testTitle,
            r.name as ruleName,
            d.dimension as dimension,
            u.user_name as userName
        from student_work_score s
                 left join teach_task t on s.task_id = t.id
                 left join teach_task_test tt on s.task_test_id = tt.id
                 left join score_rule r on s.rule_id = r.id
                 left join score_rule_dimension d on s.dimension_id = d.id
                 left join sys_user u on s.teacher_id = u.user_id
    </sql>



    <select id="selectStudentWorkScoreVoById" parameterType="Long" resultMap="StudentWorkScoreVoResult">
        <include refid="selectStudentWorkScoreWithNew"/>
        where s.id = #{id} and s.del_flag='0'
    </select>

    <select id="selectStudentWorkScoreVoList" resultMap="StudentWorkScoreVoResult">
        <include refid="selectStudentWorkScoreWithNew"/>
        where s.del_flag='0'
    </select>



    <select id="selectStudentWorkScoreList" parameterType="org.example.domain.StudentWorkScore" resultMap="StudentWorkScoreResult">
        <include refid="selectStudentWorkScoreVo"/>
        <where>  
            <if test="taskId != null "> and task_id = #{taskId}</if>
            <if test="taskTestId != null "> and task_test_id = #{taskTestId}</if>
            <if test="workId != null "> and work_id = #{workId}</if>
            <if test="workContentId != null "> and work_content_id = #{workContentId}</if>
            <if test="ruleId != null "> and rule_id = #{ruleId}</if>
            <if test="dimensionId != null "> and dimension_id = #{dimensionId}</if>
            <if test="score != null "> and score = #{score}</if>
            <if test="comment != null  and comment != ''"> and comment = #{comment}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="teacherId != null "> and teacher_id = #{teacherId}</if>
            <if test="delFlag != null">and del_flag = '0' </if>
        </where>
    </select>
    
    <select id="selectStudentWorkScoreById" parameterType="Long" resultMap="StudentWorkScoreResult">
        <include refid="selectStudentWorkScoreWithNew"/>
        where id = #{id} and del_flag = '0'
    </select>
    <select id="selectStudentWorkScoreByTeacherId"  parameterType="Long" resultMap="StudentWorkScoreVoResult">
    <include refid="selectStudentWorkScoreWithNew"/>
    where s.del_flag='0' and teacher_id = #{id}
</select>
    <insert id="insertStudentWorkScore" parameterType="org.example.domain.StudentWorkScore" useGeneratedKeys="true" keyProperty="id">
        insert into student_work_score
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="taskId != null">task_id,</if>
            <if test="taskTestId != null">task_test_id,</if>
            <if test="workId != null">work_id,</if>
            <if test="workContentId != null">work_content_id,</if>
            <if test="ruleId != null">rule_id,</if>
            <if test="dimensionId != null">dimension_id,</if>
            <if test="score != null">score,</if>
            <if test="comment != null">comment,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="teacherId != null">teacher_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="taskId != null">#{taskId},</if>
            <if test="taskTestId != null">#{taskTestId},</if>
            <if test="workId != null">#{workId},</if>
            <if test="workContentId != null">#{workContentId},</if>
            <if test="ruleId != null">#{ruleId},</if>
            <if test="dimensionId != null">#{dimensionId},</if>
            <if test="score != null">#{score},</if>
            <if test="comment != null">#{comment},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="teacherId != null">#{teacherId},</if>
         </trim>
    </insert>

    <update id="updateStudentWorkScore" parameterType="org.example.domain.StudentWorkScore">
        update student_work_score
        <trim prefix="SET" suffixOverrides=",">
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="taskTestId != null">task_test_id = #{taskTestId},</if>
            <if test="workId != null">work_id = #{workId},</if>
            <if test="workContentId != null">work_content_id = #{workContentId},</if>
            <if test="ruleId != null">rule_id = #{ruleId},</if>
            <if test="dimensionId != null">dimension_id = #{dimensionId},</if>
            <if test="score != null">score = #{score},</if>
            <if test="comment != null">comment = #{comment},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="teacherId != null">teacher_id = #{teacherId},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="deleteStudentWorkScoreById" parameterType="Long">
        update student_work_score
        set del_flag = '1'
        where id = #{id}
    </update>

    <update id="deleteStudentWorkScoreByIds" parameterType="String">
        update student_work_score
        set del_flag = '1'
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>
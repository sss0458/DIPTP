        SELECT
            DATE_FORMAT(create_time, '%Y-%m-%d') AS date,
            COUNT(*) AS count
        FROM example
        WHERE del_flag = '0'
          AND create_time BETWEEN #{beginTime} AND #{endTime}
        GROUP BY DATE_FORMAT(create_time, '%Y-%m-%d')
        ORDER BY date
    </select>-->


</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.TeachTaskTestDataManageMapper">
    
    <resultMap type="org.example.domain.TeachTaskTestDataManage" id="TeachTaskTestDataManageResult">
        <result property="id"    column="id"    />
        <result property="taskId"    column="task_id"    />
        <result property="taskTestId"    column="task_test_id"    />
        <result property="dataManageId"    column="data_manage_id"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="teacherId"    column="teacher_id"    />
    </resultMap>

    <sql id="selectTeachTaskTestDataManageVo">
        select id, task_id, task_test_id, data_manage_id, status, remark, del_flag, teacher_id from teach_task_test_data_manage
    </sql>

    <select id="selectTeachTaskTestDataManageList" parameterType="org.example.domain.TeachTaskTestDataManage" resultMap="TeachTaskTestDataManageResult">
        <include refid="selectTeachTaskTestDataManageVo"/>
        <where>  
            <if test="taskId != null "> and task_id = #{taskId}</if>
            <if test="taskTestId != null "> and task_test_id = #{taskTestId}</if>
            <if test="dataManageId != null "> and data_manage_id = #{dataManageId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="teacherId != null "> and teacher_id = #{teacherId}</if>
            <if test="delFlag != null">and del_flag = '0' </if>
        </where>
    </select>
    
    <select id="selectTeachTaskTestDataManageById" parameterType="Long" resultMap="TeachTaskTestDataManageResult">
        <include refid="selectTeachTaskTestDataManageVo"/>
        where id = #{id} and del_flag = '0'
    </select>

    <insert id="insertTeachTaskTestDataManage" parameterType="org.example.domain.TeachTaskTestDataManage" useGeneratedKeys="true" keyProperty="id">
        insert into teach_task_test_data_manage
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="taskId != null">task_id,</if>
            <if test="taskTestId != null">task_test_id,</if>
            <if test="dataManageId != null">data_manage_id,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="teacherId != null">teacher_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="taskId != null">#{taskId},</if>
            <if test="taskTestId != null">#{taskTestId},</if>
            <if test="dataManageId != null">#{dataManageId},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="teacherId != null">#{teacherId},</if>
         </trim>
    </insert>

    <update id="updateTeachTaskTestDataManage" parameterType="org.example.domain.TeachTaskTestDataManage">
        update teach_task_test_data_manage
        <trim prefix="SET" suffixOverrides=",">
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="taskTestId != null">task_test_id = #{taskTestId},</if>
            <if test="dataManageId != null">data_manage_id = #{dataManageId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="teacherId != null">teacher_id = #{teacherId},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="deleteTeachTaskTestDataManageById" parameterType="Long">
        update teach_task_test_data_manage
        set del_flag = '1'
        where id = #{id}
    </update>

    <update id="deleteTeachTaskTestDataManageByIds" parameterType="String">
        update teach_task_test_data_manage
        set del_flag = '1'
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>